<div class="container pb-4">
  <div class="row mb-5">
    <div class="w-75 mx-auto">
      <div class="col w-75 mx-auto">
        <% @genres.each do |genre| %>
          <div>
              <%= genre.name %>
          </div>
          <div>
            <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-primary' %>
            <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div>
        <%= render 'admin/genres/form', genre: @genre %>
      </div>
    </div>
  </div>
</div>