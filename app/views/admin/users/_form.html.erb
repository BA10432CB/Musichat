<%= form_with model: [:admin, user], method: :patch, local: true do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :name, "アカウント名", class: "col-4 col-form-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group row mt-5">
    <%= f.label :profile_image, "プロフィール画像", class: "col-4 col-form-label" %>
    <%= f.file_field :profile_image, class: "btn" %>
  </div>
  <div class="form-group row mt-5">
    <%= f.label :introduction, "自己紹介", class: "col-4 col-form-label" %>
    <%= f.text_area :introduction %>
  </div>
  <div class="row mb-4">
  <label class="col-lg-3">会員ステータス</label>
  <div class="col-lg-4">
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>&emsp;
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
  </div>
</div>

  <%= f.submit '編集完了' %>
<% end %>