<% posts.each do |post| %>
  <div class="row profile-content">
    <div class="col-12">
      <%= link_to admin_user_path(post.user) do %>
        <%= image_tag post.user.get_profile_image, size: '50x50', class: 'profile-image' %>
        <%= post.user.name %>
      <% end %>
    </div>
  </div>
  <div class="row post-content">
    <div class="col-3">
      <%= link_to admin_post_path(post) do %>
        <%= image_tag post.image, size: '200x200' %></div>
      <% end %>
    <div class="col-6">
      <%= link_to admin_post_path(post) do %>
        <%= post.title %><br>
        <%= post.body %><br>
        <%= render 'public/posts/static_rate', post: post %>
      <% end %>
    </div>
    <div>
      <%= link_to '編集', edit_admin_post_path(post), class: 'btn btn-create' %>
      <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-destroy' %>
    </div>
  </div>
<% end %>