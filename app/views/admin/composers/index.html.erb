<div class="container pb-4">
  <div class="row mb-5">
    <div class="w-75 mx-auto">
      <div class="col w-75 mx-auto">
        <% @composers.each do |composer| %>
          <div>
              <%= composer.name %>
          </div>
          <div>
            <%= link_to '編集', edit_admin_composer_path(composer), class: 'btn btn-primary' %>
            <%= link_to '削除', admin_composer_path(composer), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div>
        <%= render 'admin/composers/form', composer: @composer %>
      </div>
    </div>
  </div>
</div>