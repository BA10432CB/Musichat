<!DOCTYPE html>
<html>
  <head>
    <title>Musichat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/c48b4826ba.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-lg-1">
            <%= render 'layouts/menu' %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8">
            <%= yield %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3 search_form">
            <% if admin_signed_in? %>
              <%= form_with url: admin_search_path, locol: true, method: :get do |f| %>
                <%= f.text_field :word %>
                <%= f.submit "検索", class: "btn-sm" %>
              <% end %>
            <% elsif user_signed_in? %>
              <%= form_with url: search_path, local: true, method: :get do |f| %>
                <%= f.text_field :word %>
                <%= f.submit "検索", class: "btn-sm" %>
              <% end %>
            <% end %>
          </div>

        </div>
      </div>
    </main>
  </body>
</html>
