<!DOCTYPE html>
<html>
  <head>
    <title>Musichat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/c48b4826ba.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%= render 'layouts/menu' %>
          <% if user_signed_in? %>
            <div class="col-8">
              <%= yield %>
            </div>
          <% elsif admin_signed_in? %>
            <div class="col-8">
              <%= yield %>
            </div>
          <% else %>
            <div class="col-12">
              <%= yield %>
            </div>
          <% end %>
          <% if admin_signed_in? %>
            <div class="col-3 search-form">
              <%= form_with url: admin_search_path, locol: true, method: :get do |f| %>
                <%= f.text_field :word %>
                <%= f.submit "検索", class: "btn-sm" %>
              <% end %>
              <div>
                <%= render 'admin/genres/index', genres: @genres %>
              </div>
            </div>
          <% elsif user_signed_in? %>
            <div class="col-3 search-form">
              <div>
                <%= form_with url: search_path, local: true, method: :get do |f| %>
                  <%= f.text_field :word %>
                  <%= f.submit "検索", class: "btn-sm" %>
                <% end %>
              </div>
              <div>
                <%= render 'admin/genres/index', genres: @genres %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>
