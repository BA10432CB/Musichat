<%= form_with model: user, method: :patch, local: true do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :name, "アカウント名", class: "col-4 col-form-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group row mt-5">
    <%= f.label :profile_image, "プロフィール画像", class: "col-4 col-form-label" %>
    <%= f.file_field :profile_image, class: "btn" %>
  </div>
  <div class="form-group row mt-5">
    <%= f.label :introduction, "自己紹介", class: "col-4 col-form-label" %>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit '編集完了', class: 'btn btn-create' %>
<% end %>