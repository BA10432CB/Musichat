<div class="row profile-content">
  <div class="col-2">
    <%= image_tag @user.get_profile_image, size: '100x100', class: 'profile-image' %>
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col-2"><%= @user.name %></div>
      <div class="col-6"></div>
      <div class="col-4">
        <% unless @user.guest_user? %>
          <% if @user.id == current_user.id %>
            <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-10">
        <%= @user.introduction %>
      </div>
    </div>
  </div>
</div>
<%= render 'flame', posts: @posts %>