<div style="background-image: url(<%= asset_path('logo.png') %>); background-size: cover; width: 220px; height: 160px; background-repeat: no-repeat; background-position: center; margin: 0 auto;"></div>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="user-login">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
    <div class="user-login">
      <h2 class="user-login">アカウント作成</h2>
    <div class="field">
      <label><strong>アカウント名</strong></label>
      <div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "musichat", size: 25 %>
      </div>
    </div>

    <div class="field">
      <label><strong>メールアドレス</strong></label>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "×××@example.com", size: 25 %>
      </div>
    </div>

     <div class="field">
      <label><strong>電話番号</strong></label>
      <div>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "00000000000", size: 25 %>
      </div>
    </div>

    <div class="field">
      <label><strong>パスワード</strong>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </label>
      <div>
        <%= f.password_field :password, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="field">
      <label><strong>パスワード<確認</strong></label>
      <div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="actions" style="padding-top: 10px;">
      <%= f.submit "アカウント作成", class: "btn btn-create sign_up" %>
    </div>
  <% end %>
  <div>
    <p><strong>アカウントをお持ちの場合</strong></p>
  </div>
  <div>
    <%= link_to 'ログイン', user_session_path, class: 'btn btn-light sign_in' %>
  </div>
</div>