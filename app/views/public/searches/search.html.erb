<div class="container">
  <div>
    <% if @users == [] %>
      <h3>ユーザ検索結果: "<%= @word %>"</h3>
      <h4 class="pb-5">検索結果はありません</h4>
    <% else %>
      <h3>ユーザ検索結果: "<%= @word %>"</h3>
      <div class="row justify-content-between">
        <div class="col-4 pt-5">
          <%= render 'users_get', users: @users %>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <% if @posts == [] %>
      <h3>投稿検索結果: "<%= @word %>"</h3>
      <h4 class="pb-5">検索結果はありません</h4>
    <% else %>
      <h3>投稿検索結果: "<%= @word %>"</h3>
      <div class="row justify-content-between">
        <div class="col-4 pt-5">
          <h4><span>投稿一覧</span></h4>
          <%= render 'posts_get', posts: @posts %>
        </div>
      </div>
    <% end %>
  </div>
</div>