<ul class="nav nav-tabs nav-fill mt-3" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">ユーザ</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">投稿</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <% if @users == [] %>
      <h3>ユーザ検索結果: "<%= @word %>"</h3>
      <h4 class="pb-5">検索結果はありません</h4>
    <% else %>
      <h3>ユーザ検索結果: "<%= @word %>"</h3>
      <h4><span>ユーザ一覧</span></h4>
      <div class="row justify-content-between">
        <%= render 'public/searches/users_get', users: @users %>
      </div>
    <% end %>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <% if @posts == [] %>
      <h3>投稿検索結果: "<%= @word %>"</h3>
      <h4 class="pb-5">検索結果はありません</h4>
    <% else %>
      <h3>投稿検索結果: "<%= @word %>"</h3>
      <h4><span>投稿一覧</span></h4>
      <div class="row justify-content-between">
        <%= render 'public/searches/posts_get', posts: @posts %>
      </div>
    <% end %>
  </div>
</div>