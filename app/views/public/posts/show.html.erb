<div class="row pt-2 pb-2" style="background: #efffe0;">
  <div class="col-12">
    <%= link_to user_path(@post.user) do %>
      <%= image_tag @post.user.get_profile_image, size: '80x80', class: 'profile-image' %>
      <%= @post.user.name %>
      <% end %>
  </div>
</div>
<div class="row pb-2" style="background: #efffe0; border-bottom: solid 1px gray">
  <div class="col-3">
    <%= image_tag @post.image, size: '200x200' %>
  </div>
  <div class="col-4">
    <%= @post.title %><br>
    <%= @post.body %><br>
    <%= render 'static_rate', post: @post %>
  </div>
  <div class="col-5 align-self-end">
    <%= form_with model: [@post, @post_comment], local: true do |f| %>
      <%= f.text_area :comment, rows: 5, placeholder: "コメント", class: 'w-120' %>
      <%= f.submit "コメント", class: 'btn btn-create' %>
    <% end %>
  </div>
</div>
<%= render 'comment_flame', post: @post %>