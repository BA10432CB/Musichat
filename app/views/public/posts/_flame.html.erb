<div class="col w-75 mx-auto">
  <% posts.each do |post| %>
    <div>
      <%= link_to user_path(post.user) do %>
        <%= image_tag post.user.get_profile_image, size: '50x50' %>
        <%= post.user.name %>
      <% end %>
    </div>
    <div>
      <%= link_to post_path(post) do %>
        <%= image_tag post.image, size: '200x200' %>
        <span>
          <%= post.title %>
          <%= post.body %>
        </span>
      <%= render 'static_rate', post: post %>
      <% end %>
    </div>
    <div>
      <%= render 'favorite', post: post %>
    </div>
  <% end %>
</div>