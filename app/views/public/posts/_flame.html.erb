<div class="container pb-4">
  <div class="row mb-5">
    <div class="w-75 mx-auto">
      <h4 class="mt-5"></h4>
      <div class="col w-75 mx-auto">
        <% posts.each do |post| %>
          <div>
            <%= link_to(post.user) do %>
              <%= image_tag post.user.get_profile_image, size: '50x50' %>
            <% end %>
          </div>
          <div>
            <%= link_to post.title, post, class: "post_#{post.id}" %>
          </div>
          <div>
            <%= post.introduction %>
          </div>
      </div>
    </div>
  </div>
</div>