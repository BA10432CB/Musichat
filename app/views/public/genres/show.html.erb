<% @genre.posts.each do |post| %>
  <div class="row profile-content">
    <div class="col-12">
      <%= link_to user_path(post.user) do %>
        <%= image_tag post.user.get_profile_image, size: '50x50', class: 'profile-image' %>
        <%= post.user.name %>
      <% end %>
    </div>
  </div>
  <div class="row post-content">
    <div class="col-3">
      <%= link_to post_path(post) do %>
        <%= image_tag post.get_post_image, size: '200x200' %></div>
      <% end %>
    <div class="col-6">
      <%= link_to post_path(post) do %>
        <%= post.title %><br>
        <%= post.body %><br>
        <%= render 'public/posts/static_rate', post: post %>
      <% end %>
    </div>
    <div class="col-1">
      <%= render 'public/favorites/favorite', post: post %>
    </div>
  </div>
<% end %>